- model_class = Author
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= sortable 'id'
      %th= 'Name'
      %th= sortable 'family_name'
      %th= sortable 'given_name'
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @authors.each do |author|
      %tr
        %td= link_to author.id, author_path(author)
        %td= author.sortable_name
        %td= author.family_name
        %td= author.given_name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_author_path(author), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), author_path(author), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_author_path, :class => 'btn btn-primary'
